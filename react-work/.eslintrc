{
	"parser":	                      "babel-eslint",
	"extends": [
		"standard",
		"standard-react"
	],
	"plugins": [
		"babel",
		"react",
		"promise"
	],
	"env": {
		"browser":	                   true
	},
	"globals": {
		"__DEV__":                     false,
		"__TEST__":                    false,
		"__PROD__":                    false,
		"__COVERAGE__":                false
	},
	"rules" : {
		"key-spacing":                 "off",
		"jsx-quotes":                  [2, "prefer-single"],
		"max-len":                     [2, 120, 4],
		"object-curly-spacing":        [2, "always"],
		"comma-dangle":                "off",
		"indent":                      ["error", "tab"],
		"react/jsx-indent":            ["error", "tab"],
		"react/jsx-indent-props":      ["error", "tab"],
		"no-tabs":                     0,
		"space-before-function-paren": ["error", "never"],
		"no-multiple-empty-lines":     ["warn", { max: 2, maxEOF: 1 }],
		"padded-blocks":               "off",
	}
}
